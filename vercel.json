{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "client/dist/favicon.ico"
    },
    {
      "src": ".*",
      "dest": "client/dist/index.html"
    }
  ]
}
